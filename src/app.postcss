@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	height: 100vh;
	@apply bg-gradient-to-b from-slate-200 to-primary-500 text-slate-900 dark:bg-gradient-to-b dark:from-slate-900 dark:to-primary-800 dark:text-slate-200;
}

h1 {
	@apply text-3xl;
}

h2 {
	@apply text-2xl;
}

.loading {
	@apply grid h-full w-full place-content-center;
}
